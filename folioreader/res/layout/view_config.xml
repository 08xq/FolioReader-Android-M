<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/first_separator">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@mipmap/ic_launcher"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <View
        android:id="@+id/first_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/recycler_view_fonts"
        android:background="@color/black"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_fonts"
        android:scrollbars="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/second_separator"/>

    <View
        android:id="@+id/second_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/small_font"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/small_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentBottom="true"
        android:padding="8dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/small_font"
        android:layout_toLeftOf="@+id/big_font"
        android:padding="16dp"/>

    <ImageView
        android:id="@+id/big_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"/>

</RelativeLayout>